/#map-canvas
.row
  .small-12.columns
    %header
      %h1.center Concerter
      .row#add-seats
        .small-3.columns
          %form.custom
            %label{for:'select-input'} Select Section:
            %select#section-input.medium
              %option.disabled Select
              %option{value:'vip'} VIP Section
              %option{value:'ga'} General Admission
        .small-3.columns
          %label{for:'seats-input'} Number of Seats:
          %input#seats-input{type:'text', autofocus:true, placeholder:'50'}
        .small-3.columns
          %label{for:'price-input'} Price per Seat:
          %input#price-input{type:'text', placeholder:'110'}
        .small-3.columns
          %input#create-seats.button.radius.small{type:'button', value:'Create'}
#seatModal.reveal-modal
  %h2 Seat <span></span>
  %section
    / %input{type:'text', placeholder: 'Jane Doe'}
    / %input{type:'button', value: 'Submit'}
    / %p
  %a.close-reveal-modal &#215;
.row
  .small-12.columns
    %section#stage
      #stage-outline
        %h3.center STAGE
.row
  .small-12.columns
    %section#vip
.row
  .small-12.columns
    %section#ga
.row
  .small-12.columns
    %footer
      %p.center Disclaimer