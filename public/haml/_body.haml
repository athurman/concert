          %label Number of Seats:
          %input#seats-input{type:'text', autofocus:true, placeholder:'50'}
        .small-3.columns
          %label Price per Seat:
          %input#price-input{type:'text', placeholder:'110'}
        .small-3.columns
          %input#create-seats.button.radius{type:'button', value:'Create'}
